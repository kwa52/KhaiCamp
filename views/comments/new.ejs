<% include ../partials/header %>

<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-12 text-center">
      <h1>Add New Comment to <%= campground.name %></h1>
    </div>

    <div class="col-4 col-xs-12 col-md-6">
      <form class="" action="/campgrounds/<%= campground._id %>/comments" method="post">
        <div class="form-group">
            <label for="name">Text</label>
            <!-- "name" attribute used for getting data in routes -->
            <input class="form-control" type="text" placeholder="text" name="comment[text]" value="">
        </div>
        <div class="form-group">
          <label for="image">Author</label>
            <input class="form-control" type="text" placeholder="author" name="comment[author]" value="">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary">Submit</button>
        </div>

      </form>
      <a href="/campgrounds">Go Back</a>
    </div>




  </div>



</div>

<% include ../partials/footer %>
