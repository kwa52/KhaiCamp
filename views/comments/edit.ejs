
<% include ../partials/header %>

<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-12 text-center">
      <h1>Edit Comment</h1>
    </div>

    <div class="col-4 col-xs-12 col-md-6">
      <form class="" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
        <div class="form-group">
            <label for="name">Text</label>
            <!-- "name" attribute used for getting data in routes -->
            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary">Submit</button>
        </div>

      </form>
      <a href="/campgrounds/<%= campground_id %>">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
